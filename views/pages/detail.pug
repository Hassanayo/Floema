extends ../base.pug 

block variables
  - var template  = "detail"

block content
  .detail 
    .detail_wrapper
      figure.detail_media
        img.detail_media_image(alt=product.data.image.alt src=product.data.image.url)
      
      .detail_information
        p.detail_information_collection=product.data.collection.data.title
        h1.detail_information_title=product.data.title

        .detail_information_content
          .detail_information_highlights
            each highlight in product.data.highlights
              p.detail_information_highlight
                if highlight.highlights_icon == 'Arrow'
                  svg.detail_information_highlight_icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 41 41")
                    path(stroke="currentColor" fill="none" d="M-1166.33,520.33a20,20,0,0,1,20,20,20,20,0,0,1-20,20,20,20,0,0,1-20-20A20,20,0,0,1-1166.33,520.33Zm0,.5a19.5,19.5,0,0,1,19.5,19.5,19.5,19.5,0,0,1-19.5,19.5,19.5,19.5,0,0,1-19.5-19.5A19.5,19.5,0,0,1-1166.33,520.83Zm10.75,9-.66,2.36,0,2.59-1.93-2.31-2.31-1.93,2.59-.05Zm-20.51,20.51.66-2.36,0-2.59,1.93,2.31,2.31,1.93-2.59.05Zm4.6-4.6,11.31-11.31" transform="translate(1186.83 -519.83)")
                else
                  svg.detail_information_highlight_icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40")
                    path(stroke="currentColor" fill="none" d="M-1078.13,529.42a19.51,19.51,0,0,1,19.5,19.5,19.5,19.5,0,0,1-19.5,19.5,19.5,19.5,0,0,1-19.5-19.5A19.51,19.51,0,0,1-1078.13,529.42Z" transform="translate(1098.13 -528.92)")
                    path(fill="currentColor" d="M-1073.86,538.79l-2.76,8.6,8.72-2.63-8.16,4.13,8.15,4.27-8.71-2.82,2.82,8.9-4.26-8.34-4.14,8.15,2.63-8.71-8.59,2.75,8.15-4.2-8.34-4.33,8.78,2.83-2.82-8.79,4.32,8.35Z" transform="translate(1098.13 -528.92)")
                
                span.detail_information_highlights_text!=highlight.highlights_text.replace(/\n/, '<br>')

          .detail_information_list
            each item in product.data.information
              p.detail_information_item
                strong.detail_information_item_title=item.information_label
                span.detail_information_item_description=item.information_description

          a.detail_information_link(href=product.data.link_url.url target="_blank")=product.data.link_text
      

    a.detail_button(href=Link(home.data.collections)) Close
      svg.detail_button_icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 125 61")
        path(stroke="currentColor" fill="none" d="M62.5.5c34.24,0,62,13.43,62,30s-27.76,30-62,30S.5,47.07.5,30.5,28.26.5,62.5.5Zm0,.5c34,0,61.5,13.21,61.5,29.5S96.47,60,62.5,60,1,46.79,1,30.5,28.53,1,62.5,1Z")
